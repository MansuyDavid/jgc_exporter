<?xml version="1.0" encoding="UTF-8" ?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>jgc_exporter</include>
                <include>jgc_exporter.jar</include>
            </includes>
            <outputDirectory>/jgc_exporter/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>config.yaml</include>
            </includes>
            <outputDirectory>/jgc_exporter/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <includes>
                <include>LICENSE</include>
                <include>README.md</include>
            </includes>
            <outputDirectory>/jgc_exporter</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <outputDirectory>/jgc_exporter/bin</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>